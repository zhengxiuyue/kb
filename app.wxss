.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page{
  display: flex;
  flex-direction: column;
  background: #F8F8F8;
  z-index: 1;
}

.menu-item{ 
  width: 32%;    
  float: left;    
  text-align: center;   
  padding-top: 8px; 
}  

.menu-item1{    
  width: 47%;    
  float: left;    
  text-align: center;    
  padding-top: 8px;  
}  

.img{   
  width: 23px;    
  height: 23px;   
  display: block;   
  margin:auto;  
}  

.clear{    
  clear: both;  
}  

.tab-bar{   
  position: fixed;
  bottom: 0rpx;  
  width: 100%;    
  padding: 0px 2%;  
  opacity:1;
  z-index: 9;
}   

.button{  
  margin: 130px;
}

