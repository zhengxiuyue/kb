/* pages/activity/activity.wxss */
page{
  background: #fff;
  margin-bottom: 100rpx;
}
.list-view{
  border-top: 1px solid #cccccc;
}

.list-box{
  display:flex;
  padding:5px 10px;
  border:0.5px solid #f8f8f8;
  margin:20rpx 10rpx;
  border-radius:20rpx;
  box-shadow:0rpx 0rpx 20rpx rgba(0, 0, 0, 0.1);
  justify-content: space-between;
}

.list-images image{
  width: 284rpx;
  height: 160rpx;
  margin: auto;
}

.list-images{
  display: flex;
}

.list-text {
  font-size: 14px;
  color: #666666;
  background-size:60rpx;
  display: flex;
  flex-direction: column;
}

.list-text .name{
  display: block;
  padding: 0rpx 0rpx 0rpx 20rpx;
}

.list-text .txt{
  padding: 5rpx 20rpx;
  color:#aaaaaa;
  display: flex;
  align-items:center;
}

.list-text .price{
  font-size: 32rpx;
  color: #ed4040;
}

.list-text .num{
  font-size: 26rpx;
  color:#666
}

.list-text .store{
  color:#666;
  padding-left: 20rpx;
  display:flex;
  flex-wrap:wrap;
  width:400rpx;
}

.swiper-box{
  height: 100%;
}

.scroll-box{
  height: 100%;
  padding-top: 260rpx;
}

.activityon{
  color:#ed4040;
  padding:8rpx;
  line-height:35rpx;
  border:2rpx solid #ed4040;
  font-size:24rpx;
  margin-left:10rpx;
  background:#fff;
  display: inline;
  height: 50rpx;
  margin-right: 10rpx;
}

.ontop{
  display:flex;
  line-height:50rpx;
  justify-content: space-between; 
  width: 520rpx; 
}

.classcard{
  margin: 200rpx auto;
  text-align: center;
}

.space{
  height: 250rpx;
  width: 250rpx;
}