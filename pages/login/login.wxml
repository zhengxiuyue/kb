<!--pages/login/login.wxml-->
<image src='/image/logo.png' class='logo'></image>

<view class='infm'>
  <image src='/image/tel.png' class='icon'></image>
  <input class='ipt' value='{{tel}}' bindinput='telInput' placeholder='请输入手机号码或邮箱' placeholder-class='placeholder' cursor-spacing="0"></input>
</view>

<view class='infm'>
  <image src='/image/user.png' class='icon2'></image>
  <input class='ipt'  value='{{password}}' bindinput='passwordInput' placeholder='请输入姓名' placeholder-class='placeholder' cursor-spacing="50"></input>
</view>

<view class='infm-noborder'>
  <image src='/image/user.png' class='icon3'></image>
  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for-items="{{items}}">
      <radio value="{{item.id}}" checked="{{item.checked}}"/>{{item.value}}
    </label>
  </radio-group>
</view>


<view class='submit'>
  <button class='login' bindtap='login' >登录</button>
</view>




