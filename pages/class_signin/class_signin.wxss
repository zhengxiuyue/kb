/* pages/class_signin/class_signin.wxss */
.sign{
  font-size: 32rpx;
  position: relative;
  text-align: center;
  margin:0rpx auto; 
}

.info{
  color: #1296db;
}

.contact{
  margin-left: 30rpx;
  margin-top: 40rpx;
}

.sign1{
  font-size: 32rpx;
  position: relative;
}


.title{
  margin-left:60rpx;
  margin-bottom:40rpx; 
  margin-top:40rpx;
  font-weight: bold;
}

.title1{
  margin-left:40rpx;
  margin-bottom:40rpx; 
  margin-top:80rpx;
}

.time{
  text-align: center;
  margin-top: 40rpx;
}

.explain{
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.select{
  margin: 20rpx;
  width: 700rpx;
  height: 80rpx;
  background-color: #ff9900;
  text-align: center;
  line-height: 80rpx;
  justify-content: center;
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
}

.space{
  margin: 10rpx auto;
  width: 200rpx;
  height: 178rpx;
}

.phone_personal{
  font-size:30rpx; 
  width: 460rpx;
  color: #1DA27F;
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  position: absolute;
}
.phone_one{
  display: flex; 
  position: absolute;
  top: -10rpx;
  left: 16%;
  justify-content: space-between;
  border: 2rpx solid #e6e6ea;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  background: #fff;
  height:70rpx;
  width: 460rpx;
  line-height: 70rpx;
  margin:-2rpx 100rpx;
  margin-bottom: 70rpx;
  border-radius: 10rpx;
}
.person_box{
  font-size: 30rpx;
  position: absolute;
  top: 60rpx;
  left: 21.2%;
  border-radius: 10rpx;
}
.phone_select{
  margin-top:0;
  left: 4%;
  z-index: 100;
  position: absolute;
}

.select_one{
  border-radius: 10rpx; 
  font-size:30rpx; 
  width: 460rpx;
  text-align: center;
  background-color:#fff;
  border: 1rpx solid #e6e6ea;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  height:70rpx;
  line-height:70rpx;
  margin-left: 62rpx;
}
.personal_image{
  z-index: 100;
  position: absolute;
  right:2.5%;
  width: 34rpx;
  height: 20rpx;
  margin:40rpx 20rpx 40rpx 0;
  transition: All 0.4s ease;   
  -webkit-transition: All 0.4s ease;
}
.rotateRight{
  transform: rotate(180deg); 
}

.submit{
  margin: 100rpx;
  background-color: #1DA27F;
  color: #fff; 
  height: 90rpx;
  line-height: 90rpx;
  justify-content: center;
}

.contact-tab {
	display: flex;
  margin-top: 40rpx;
}

.tab{
  display: none;
}

.contact-tab view {
	height: 70rpx;
	margin: 0 30rpx;
	line-height: 70rpx;
	border-bottom: 5rpx solid transparent;
	font-size: 30rpx;
  font-weight: bold;
}
.contact-tab view.current {
	border-color: #1DA27F;
	color: #1DA27F;
  font-size: 34rpx;
}

.classcard{
  margin: 100rpx auto;
  text-align: center;
}

.space{
  height: 250rpx;
  width: 250rpx;
}

.signclick{
  margin: 20rpx auto;
  background-color: #1296db;
  color: #fff;
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  justify-content: center;
}

