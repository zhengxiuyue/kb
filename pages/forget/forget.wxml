<!--pages/forget/forget.wxml-->
<image src='/image/logo2.png' class='logo'></image>
<view>
  <view style='height:50rpx;'></view>
  <view class='infm'>
    <image src='/image/tel.png' class='icon'></image>
    <input class='ipt' type='number' value='{{tel}}' bindinput='telInput' placeholder='请输入手机号码' placeholder-class='placeholder' ></input>
  </view>

  <view class='infm'>
    <image src='/image/code.png' class='icon2'></image>
    <input class='ipt' type='number' value='{{authcode}}' bindinput='authcodeInput' placeholder='请输入验证码' placeholder-class='placeholder' ></input><button disabled='{{isClick}}' bindtap='gainAuthCodeAction' class='btn' cursor-spacing="50">{{time}}</button> 
  </view>

  <view class='infm'>
    <image src='/image/password.png' class='icon2'></image>
    <input class='ipt' type='password' value='{{password}}' bindinput='passwordInput' placeholder='请输入新密码' placeholder-class='placeholder' cursor-spacing="50"></input>
  </view>

  <view class='infm'>
    <image src='/image/password.png' class='icon2'></image>
    <input class='ipt' type='password' value='{{password2}}' bindinput='passwordInput2' placeholder='请确认密码' placeholder-class='placeholder' cursor-spacing="50"></input>
  </view>

  <view class='submit'>
  <button class='sure' bindtap='sure' >确定</button>
</view>

</view>

