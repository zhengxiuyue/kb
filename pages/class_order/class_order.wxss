/* pages/class_signUp/class_signUp.wxss */
.page{
  line-height: 2; 
}
button::after{
border:none;
}

input{
outline:none;
border:none;
list-style: none;
}
.title{
  font-size: 34rpx;
  font-weight: bold ;
  font-family: '微软雅黑';
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.titleImg{
  width:40rpx;
  height:40rpx; 
  margin-right: 20rpx;
}

.title-text{
 position: relative;
 top: -5rpx;
}

.class{
  margin: 20rpx 60rpx;
  line-height: 1.8;
}

.class-desImg{
  display: inline-block;
  position: relative;
  top: 7rpx;
  margin-right: 20rpx;
}

.class-desImg-img{
  width: 40rpx;
  height: 40rpx;
}

.class-des{
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 40rpx;
}

.class-des-item{
  width: 50%;
  display: inline-block;
}

.amount{
  text-align: right;
  color: #ff9900;
}

.tips{
  margin: 10rpx auto;
}

.tipsImg{
  width: 40rpx;
  height: 40rpx;
  float: left;
  position: relative;
  top: 8rpx;
}

.tipsText{
  color: #666666;
  display: inline-block;
  position: relative;
  top: -6rpx;
  left: 10rpx;
}

.btn{
  height: 60rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #2a9dd1;
  border:none;
  padding-top: 7rpx;
  float: right;
  background-color: #F8F8F8;
  position: relative;
  top: -55rpx;
  z-index: 99;
}

button[disabled]{
background-color: #F8F8F8 !important;
color:#2a9dd1 !important;
}

.infm{
  position: relative;
  height: 60rpx;
  margin:20rpx 80rpx 40rpx 80rpx;
  border-bottom:4rpx solid #dddee1;
}

.infm-noborder{
  position: relative;
  height: 60rpx;
  margin:20rpx 80rpx 50rpx 80rpx;
}

.infm-half{
  position: relative;
  height: 60rpx;
  margin:20rpx 45% 0rpx 80rpx;
  border-bottom:4rpx solid #dddee1;
}

#location{
  display: inline-block;
  margin-left: 60rpx;
}

/* 时间轴 */
.weui-cell-list{  
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: relative;
}

.weui-cell-line{
  margin-left: 170rpx; 
  border-left: 4rpx solid #1DA27F; 
  height: 130rpx;   
  position: relative;
}

.weui-cell-line-tea{
  margin-left: 170rpx; 
  border-left: 4rpx solid #1DA27F; 
  height: 190rpx;   
  position: relative;
}

.undo{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  margin-left: 60rpx;
}


.weui-cell-circle{  
  border: 4rpx solid #000; 
  border-radius: 16rpx;  
  width: 20rpx;  
  height: 20rpx;  
  border-color: #1DA27F;
  margin-left: 160rpx;
}

.weui-cell-time{  
  font-size: 30rpx;  
  padding-left: 30rpx;  
  display: flex;
  margin-bottom: 20rpx; 
}

.weui-cell-name{
  font-size: 28rpx;
  height: 46rpx;
  position: absolute;
  font-weight: bold;
  margin-left: 80rpx;
}

.orderclick{
  justify-content: center;
  margin-bottom: 10rpx; 
  padding: 0 20rpx;
  text-align:center;
  font-size:28rpx;
  width:120rpx;
  height:60rpx;
  line-height:60rpx;
  background-color:#19be6b;
  color:#fff;
  border-radius:5rpx;
  border-color:#1da27f;
}

.orderclicked{
  justify-content: center;
  margin-bottom: 10rpx; 
  padding: 0 20rpx;
  text-align:center;
  font-size:28rpx;
  width:120rpx;
  height:60rpx;
  line-height:60rpx;
  background-color:#cdcdcd;
  color:#fff;
  border-radius:5rpx;
  border-color:#cdcdcd;
}

