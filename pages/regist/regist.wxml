<!--pages/regist/regist.wxml-->
<image src='/image/logo2.png' class='logo'></image>

<view class='infm'>
  <image src='/image/user.png' class='icon3'></image>
  <input class='ipt' bindinput='usernameInput' placeholder='请输入姓名' value='{{username}}'placeholder-class='placeholder'></input>
</view>

<view class='infm'>
  <image src='/image/tel.png' class='icon'></image>
  <input class='ipt' type='number' value='{{tel}}' bindinput='telInput' placeholder='请输入手机号码' placeholder-class='placeholder'></input>
</view>

<view class='infm'>
  <image src='/image/code.png' class='icon2'></image>
  <input class='ipt' type='number' value='{{authcode}}' bindinput='authcodeInput' placeholder='请输入验证码' placeholder-class='placeholder' cursor-spacing="50">
  </input>
  <button disabled='{{isClick}}' bindtap='gainAuthCodeAction' class='btn'>{{time}}</button> 
</view>

<view class='infm'>
  <image src='/image/password.png' class='icon2'></image>
  <input class='ipt' type='password' value='{{password}}' bindinput='passwordInput' placeholder='请输入密码' placeholder-class='placeholder' cursor-spacing="50"></input>
</view>

<view class='infm'>
  <image src='/image/password.png' class='icon2'></image>
  <input class='ipt' type='password' value='{{password2}}' bindinput='passwordInput2' placeholder='请确认密码' placeholder-class='placeholder' cursor-spacing="50"></input>
</view>

<view class='submit'>
  <button class='login' bindtap='regist' >注册</button>
  <text class='regist' bindtap='login'>登录</text>
</view>
