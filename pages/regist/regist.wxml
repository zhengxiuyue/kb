<!--pages/regist/regist.wxml-->
<image src='/image/logo2.png' class='logo'></image>

<view class='infm'>
  <input class='ipt' bindinput='usernameInput' placeholder='请输入姓名' value='{{username}}'placeholder-class='placeholder'></input>
</view>

<view class='infm-noborder'>
  你是
  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for-items="{{items}}" wx:key="xxx">
      <radio value="{{item.id}}" checked="{{item.checked}}"/>{{item.value}}
    </label>
  </radio-group>
</view>

<view class='infm'>
  <input class='ipt' type='number' bindinput='telInput' placeholder='请输入手机号码' value='{{tel}}' placeholder-class='placeholder' ></input>
</view>

<view class='infm'>
  <input class='ipt' type='number' value='{{authcode}}' bindinput='authcodeInput' placeholder='请输入验证码' placeholder-class='placeholder' ></input><button disabled='{{isClick}}' bindtap='gainAuthCodeAction' class='btn'>{{time}}</button> 
</view>

<view class='infm'>
  <input class='ipt' type='password' value='{{password}}' bindinput='passwordInput' placeholder='请输入密码' placeholder-class='placeholder'></input>
</view>




<view class='submit'>
  <button class='login' bindtap='regist' >注册</button>
  <text class='regist' bindtap='login'>登入</text>
</view>
